root = true

# Base for all text files
[*]
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf

# Bash
[*.bash]
indent_style = space
indent_size = 4

# C
[*.c]
indent_style = space
indent_size = 4

# Clojure
[*.clj]
indent_style = space
indent_size = 2

# C++
[*.cpp]
indent_style = space
indent_size = 2

# Crystal
[*.cr]
indent_style = space
indent_size = 2

# C#
[*.cs]
indent_style = space
indent_size = 4

# CSS
[*.css]
indent_style = space
indent_size = 2

# D
[*.d]
indent_style = space
indent_size = 4

# Elm
[*.elm]
indent_style = space
indent_size = 2

# Emojicode
[*.emojic]
indent_style = space
indent_size = 2

# Factor
[*.factor]
indent_style = space
indent_size = 2

# Go
[*.go]
